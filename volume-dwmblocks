#!/bin/sh
mute=`amixer | grep -m 1 "Front Left:" | awk -F'[][%]' '{print $5}'`
volume=`amixer | grep -m 1 "Front Left:" | awk -F'[][%]' '{print $2}'`

if [[ $mute == "off" ]]; then
	icon=ðŸ”‡
else
	if [[ $volume -lt 1 ]]; then
		icon=ðŸ”‡
	elif [[ $volume -lt 25 ]]; then
		icon=ðŸ”ˆ
	elif [[ $volume -lt 75 ]]; then
		icon=ðŸ”‰
	elif [[ $volume -lt 150 ]]; then
		icon=ðŸ”Š
	else
		icon=ðŸ“¢
	fi
fi

echo $icon
